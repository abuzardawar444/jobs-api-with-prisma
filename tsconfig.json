{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
